<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:showIn="@layout/activity_main"
    tools:context=".MainActivityFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset 1"
        android:id="@+id/buttonRes1"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/buttonRes1"
        android:layout_alignBottom="@+id/buttonRes1"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset 2"
        android:id="@+id/buttonRes2"
        android:layout_below="@+id/buttonRes1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/buttonRes2"
        android:layout_alignBottom="@+id/buttonRes2"
        android:layout_alignStart="@+id/textView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset 3"
        android:id="@+id/buttonRes3"
        android:layout_below="@+id/buttonRes2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/buttonRes3"
        android:layout_alignBottom="@+id/buttonRes3"
        android:layout_toEndOf="@+id/buttonRes3"
        android:layout_marginStart="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Increment tally 1"
        android:id="@+id/buttonInc1"
        android:layout_above="@+id/buttonRes2"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Increment tally 2"
        android:id="@+id/buttonInc2"
        android:layout_alignBottom="@+id/buttonRes2"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Increment tally 3"
        android:id="@+id/buttonInc3"
        android:layout_alignBottom="@+id/buttonRes3"
        android:layout_alignEnd="@+id/buttonInc2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tally 1"
        android:id="@+id/name1"
        android:layout_above="@+id/buttonInc1"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tally 2"
        android:id="@+id/name2"
        android:layout_above="@+id/buttonInc2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tally 3"
        android:id="@+id/name3"
        android:layout_above="@+id/buttonInc3"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_marginTop="18dp"
        android:text="new name"
        android:layout_below="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set 1"
        android:id="@+id/set1"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SET 2"
        android:id="@+id/set2"
        android:layout_alignBottom="@+id/set1"
        android:layout_toEndOf="@+id/set1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SET 3"
        android:id="@+id/set3"
        android:layout_alignTop="@+id/set2"
        android:layout_toEndOf="@+id/set2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change tally names"
        android:id="@+id/textView4"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/buttonRes3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="number"
        android:id="@+id/textView5"
        android:layout_above="@+id/buttonInc1"
        android:layout_toEndOf="@+id/set2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset All"
        android:id="@+id/buttonReset"
        android:layout_below="@+id/set1"
        android:layout_alignParentStart="true" />

</RelativeLayout>
